<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_services"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.romanpr.passwordmanager.ShowServices"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Secure Passwords"
            android:textSize="25sp"
            android:layout_gravity="center"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="406dp"
            android:id="@+id/list_viewShowServices"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAddService"
            android:text="Add"
            android:layout_gravity="center"
            android:onClick="addAccount"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUpdateService"
            android:text="Update"
            android:layout_gravity="center"
            android:onClick="updateList"
            />


    </LinearLayout>

</LinearLayout>
